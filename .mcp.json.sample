{
  "mcpServers": {
    "unifi": {
      "command": "uv",
      "args": ["run", "--directory", "./unifi-mcp", "mcp", "run", "server.py"],
      "env": {
        "UNIFI_API_KEY": "your-api-key-here",
        "UNIFI_HOST": "https://your-controller-ip-or-hostname",
        "UNIFI_SITE_ID": "your-site-id"
      }
    },
    "ssh": {
      "command": "uv",
      "args": ["run", "--directory", "./ssh-mcp", "mcp", "run", "server.py"]
    }
  }
}
